{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "sourceRoot": "src",
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "watch": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/app/**"
    ]
}